{
  "name": "midi-bricks-electron",
  "version": "0.7.0",
  "main": "./build/electron.js",
  "homepage": "./",
  "description": "Midi Bricks for all!",
  "author": "TimSusa <timmsusa@googlemail.com>",
  "license": "MIT",
  "files": [
    "public",
    "build"
  ],
  "dependencies": {
    "electron-is-dev": "^0.3.0",
    "electron-window-state": "^5.0.1"
  },
  "build": {
    "appId": "tim.susa.midi-sliders.de",
    "mac": {
      "category": "your.app.category.type"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "files": [
      "build/**/*"
    ]
  },
  "devDependencies": {
    "concurrently": "^3.6.0",
    "electron": "^4.0.1",
    "electron-builder": "^20.38.5",
    "electron-publish": "^20.38.5",
    "midi-bricks": "^0.6.0",
    "wait-for-localhost-cli": "^1.0.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "scripts": {
    "dev": "concurrently \"BROWSER=none react-scripts start\" \"wait-for-localhost 3000 && electron .\"",
    "build": "npm run clean && react-scripts build && build --mac --win",
    "test": "react-scripts test",
    "postinstall": "electron-builder install-app-deps && rimraf src && cp -R node_modules/midi-bricks/src src",
    "clean": "rimraf build && rimraf dist && rimraf src && cp -R node_modules/midi-bricks/src src"
  }
}
